- available = {t('.aws')=>"AwsProvider", t('.google')=>"GoogleProvider", t('.iaas')=>"FogProvider", t('.metal')=>'MetalProvider', t('.openstack')=>'OpenStackProvider', t('.packet')=>'PacketProvider'}

%table{:width=>'100%'}
  %tr
    %td
      %h1= t '.title'
    %td{:align=>'right'}
      = form_for :provider, :'data-remote' => true, :url => provider_path(:id=>"create"), :html => { :method=>:get, :'data-type' => 'html',  :class => "formtastic" } do |f|
        = select :new, :type, options_for_select(available, available.keys.first)
        = button_tag t(".new"), :method=>:get, :html => {:class=>"button"}

%table.data.box
  %thead
    %th= t '.name'
    %th= t '.type'
    %th= t '.description'
  %tbody
    - @list.each do |i|
      - next unless i.type
      %tr
        %td= link_to i.name, provider_path(i.id)
        %td= i.type
        %td= i.description
