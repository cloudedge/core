%h1= t '.title', :name => @item.name.titleize

%dl
  = dl_item(t('.type'), @item.type || (t 'not_set'))
  = dl_item(t('.description'), @item.description || (t 'not_set'))
  %dt= t '.details'
  %dd
    %a.toggle.with_label{:href => "#", :id => "#details_toggle", :rel => "details"}= t "expand"
    %div{:id=>"details", :style =>"display:none"}
      %pre= JSON.pretty_generate @item.auth_details


%br

- begin

  %h2= t '.nodes'

  %ol
    - @item.nodes.order(:name).each do |n|
      %li= link_to n.name, node_path(n.id)

- rescue Exception => e
  %strong= t 'work_in_progress', :message => 'join issue'
  %p= e.inspect